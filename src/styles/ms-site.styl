@import 'jeet'
// edit()

body
	font-family: sans-serif

.container
	center(800px, 20px)

img
	max-width: 100%
	
h1
	color: #008040

nav 
	margin-bottom: 15px
	a
		inline-block()
		padding: 10px
		text-decoration: none
		background-color: #008040
		color: black
		border-radius: 4px

.portfolio article
	col(1/2, cycle: 2)
	// Note that you can't place a Rupture statement right after a Jeet plugin
	// statement. i.e., don't remove this margin-bottom statement.
	margin-bottom: 20px
	+below(550px)
		stack()

.blogPosts
	col(3/4)

.blogSidebar
	col(1/4)
	background-color: #eee
	+below(550px)
		stack()

.nextPreviousLinks
	margin: 10px 0px 10px 0px
	
.nextLink
	width: 50%
	text-align: right
	float: right

.previousLink
	width: 50%
	text-align: left
	float: left

// Credit goes to http://blog.slaks.net/
code
	position: relative
	display: block
	
code:before
	font-family: sans-serif
	font-weight: 100
	letter-spacing: 8px
	position: absolute
	top: 0
	right: 10px
	font-size: 20px
	pointer-events: none
	opacity: .5
    
code.lang-js:before
	content: "JavaScript"
	color: #e33
	
code.lang-html:before
	content: "HTML"
	color: #3e3

code.lang-markdown:before
	content: "Markdown"
	color: #33e

footer
	font-size: 10pt
	width: 800px
	margin: 0 auto
	margin-top: 15px
	background-color: #ccc
	color: black
	padding: 10px